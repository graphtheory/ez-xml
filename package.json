{
  "name": "ez-xml",
  "version": "0.1.2",
  "description": "Parse and query XML files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graphtheory/ez-xml.git"
  },
  "bugs": {
    "url": "https://github.com/graphtheory/ez-xml/issues"
  },
  "scripts": {
    "compile": "tsc",
    "lint": "./node_modules/tslint/bin/tslint --project .",
    "test": "nyc mocha src/test/*.test.ts",
    "report": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "format": "find src/ -name '*.ts' | xargs ./node_modules/.bin/prettier --write --tab-width 4 --print-width 120",
    "commit": "npm format && npm lint && npm test"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "lcovonly",
      "html",
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "xml",
    "xmlparser",
    "xmlbuilder",
    "json"
  ],
  "author": "John Zetterstr√∂m",
  "license": "MIT",
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.6",
    "coveralls": "^3.0.2",
    "husky": "^1.1.3",
    "istanbul": "^0.4.5",
    "mocha": "^10.2.0",
    "nsp": "^3.2.1",
    "nyc": "^13.1.0",
    "prettier": "^1.15.2",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
